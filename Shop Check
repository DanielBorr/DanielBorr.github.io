var nevermindArray = ["Changed your mind?", "Unsure?", "Reconsidering?", "Need time to think?"]
                      
var backToShop = 0;

var offer;

var bank;

var enoughMoney = 0;

var notEnough = ["Sorry, you're a little short.", "Not enough buddy.", "You don't seem to have enough, sorry.", "I don't bargin.", "Hmm, that's not all I asked for."]

var enough = ["Pleasure doing business with you.", "Thanks, that'll go to my retirement fund.", "You're a respectable man (or woman).", "Enjoy!", "Exellent!", "Wonderful!"]

while(offer !== no) {
  
  if(backToShop === 0) {
    
    offer = prompt(itemsInStock).toLowerCase();
  }
  
  else{
    
    itemsInStock.pop();
    
    itemsInStock.unshift("Anything else? ");
    
    offer = prompt(itemsInStock).toLowerCase;
  }
                      
  backToShop = backToShop + 1;
  
  while(offer === "dynasty wood" && enoughMoney > 0){
    
    var howMany = prompt("I've traveled far and wide for this lumber, it's something you wont find here for sure. Lucky for you, I have a little too much-- it'll be 50 copper, how much would you like?").toLowerCase
    
    if (howMany === 0 || "none" || "nevermind"){
      
      alert(nevermindArray(Math.floor(Math.random()*nevermindArray.length)));
    }
            
    else{
         
      bank = bank - (howMany * 50)
      
      if (bank < 0) {
        
        alert(notEnough(Math.floor(Math.random()*notEnough.length)));
      }
      
      else{
        
        alert(enough(Math.floor(Math.random()*enough.length)));
        
        enoughMoney =+ 1;
      }
    }
  }
  
  while(offer === "pad thai" && enoughMoney > 0){
    
    var howMany = prompt("Mmmmm I love noodles.. good choice! How many would you like? They're 20 silver each.").toLowerCase
    
    if (howMany === 0 || "none" || "nevermind"){
      
      alert(nevermindArray(Math.floor(Math.random()*nevermindArray.length)));
    }
            
    else{
         
      bank = bank - (howMany * 2000)
      
      if (bank < 0) {
        
        alert(notEnough(Math.floor(Math.random()*notEnough.length)));
      }
      
      else{
        
        alert(enough(Math.floor(Math.random()*enough.length)));
        
        enoughMoney =+ 1;
      }
    }
  }
  
  while(offer === "pho" && enoughMoney > 0){
    
    var howMany = prompt("Ohh, you have good taste, one of my personal favorites! That'll be 30 silver per serving, how many would you like?").toLowerCase
    
    if (howMany === 0 || "none" || "nevermind"){
      
      alert(nevermindArray(Math.floor(Math.random()*nevermindArray.length)));
    }
            
    else{
         
      bank = bank - (howMany * 3000)
      
      if (bank < 0) {
        
        alert(notEnough(Math.floor(Math.random()*notEnough.length)));
      }
      
      else{
        
        alert(enough(Math.floor(Math.random()*enough.length)));
        
        enoughMoney =+ 1;
      }
    }
  }
  
  while(offer === "sake" && enoughMoney > 0){
    
    var howMany = prompt("").toLowerCase
    
    if (howMany === 0 || "none" || "nevermind"){
      
      alert(nevermindArray(Math.floor(Math.random()*nevermindArray.length)));
    }
            
    else{
         
      bank = bank - (howMany * )
      
      if (bank < 0) {
        
        alert(notEnough(Math.floor(Math.random()*notEnough.length)));
      }
      
      else{
        
        alert(enough(Math.floor(Math.random()*enough.length)));
        
        enoughMoney =+ 1;
      }
    }
  }
}

