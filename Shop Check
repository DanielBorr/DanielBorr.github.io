function randomNumsBetween(min , max) {
  
  return Math.floor(Math.random() * (max - min + 1) + min)
}

var numOfItems = randomNumsBetween(3,9)

var timesRun = 0

var randoms = [];

function randomArrayFunc() {
  
  var whichIndex = randomNumsBetween(0, 36);
  
  randoms.push(items[whichIndex]);
  
  
  console.log(items[whichIndex]);

  for (var i = 0; i < randoms.length-2 ; i++){
    
    
    if (randoms[i] === items[whichIndex]){
      console.log("There was a duplicate!");
      delete items [whichIndex];
    }
  }
  
  if (items[whichIndex] === undefined) {
    
    items[whichIndex].push("redefined");
    
    //timesRun =+ 1;
    
    //console.log(timesRun);
  } 
}
 
